*
	margin 0
	padding 0
	outline none
body
	font-size: 18px
	font-family: Gy
	color #fff
	background-color: #000
	line-height: 1.5
a
	color: #000
	&:focus
		outline: 0
		text-decoration none
	&:hover
		text-decoration none
h1,h2,h3,h4,h5,h6
	font-weight normal
	margin 0
button
	border none
section
header
footer
	width 100%
	display block
.laptop-wrapper
	position relative
	z-index 50
	&:before
		content ''
		display block
		width 120%
		height 143%
		// max-width 761px
		margin 0 auto
		top -8%
		left -10%
		right 0
		position absolute
		background-image url(../img/images/laptop.png)
		background-repeat no-repeat
		background-position: center
		background-size cover
	// padding 30px 90px 55px
.video-wrapper
	margin 0 auto
	position relative
	width 100%
	top 3px
	// z-index 60
	&:before
		content ''
		height 0
		padding-top 56.25%
		display block
	&:after
		content: ''
		display block
		position: absolute
		top: 0
		left 0
		right 0
		width: 100%
		height 70px
	img,
	iframe
		position absolute
		width 100%
		height 100%
		display block
		background-color #000
		border-radius 3px
		border: 0
		top 0
		left 0
		right 0
		bottom 0
		cursor pointer
.button
	display block
	text-align center
	font-size: 18px
	font-family: M
	padding 9px 10px
	background-color: #5a1a5e
	color #fff
	margin 0 auto
	width 100%
	max-width 280px
	text-decoration: none
	transition: all .4s ease
	&:focus
		text-decoration: none
		color #fff
	&:hover
		text-decoration: none
		color #fff
		background-color: #5a1a5e + 15%