#cases
	padding 150px 0 0
	background-image url(../img/backs/cases.png)
	background-repeat no-repeat
	background-position: center bottom
	background-size: cover
	position relative
	&:after
		content ''
		display block
		position absolute
		width 100%
		height 157px
		left 0
		right 0
		bottom: -157px
		background-image url(../img/backs/cases-low.png)
		background-repeat no-repeat
		background-position: bottom center
		background-size cover
.cases-title
	font-size: 45px
	font-family: MBk
	position relative
	margin-bottom: 75px
	&:after
		content: ''
		display block
		position absolute
		width 345px
		height 13px
		background-color: #772377
		margin 0 auto
		left 0
		right 0
		bottom: -20px
.case-link
	position relative
	display block
	&-2:after
		content: ''
		display block
		position absolute
		left -60px
		bottom: -6px
		width 218px
		height 214px
		background-image url(../img/images/bundle-2.png)
		background-repeat no-repeat
		background-position: center
		background-size contain
	&-3:before
		content: ''
		display block
		position absolute
		right -55px
		top -90px
		width 224px
		height 324px
		background-image url(../img/images/bundle-3.png)
		background-repeat no-repeat
		background-position: center
		background-size contain
.case
	background-color #fff
	padding 35px
	overflow hidden
	margin-bottom: 40px
	display table
	width 100%
	position relative
	&:after
		content 'â€œ'
		display block
		position absolute
		font-size: 150px
		font-family: GyB
		color #772377
		bottom -11px
		right 10px
		line-height: 41px
.case-partner
	display: table-cell
	// margin-right: 25px
	width 130px
	padding: 15px 25px 0 0
	&-name
		text-align: center
		margin 10px 0 0
		color #000
		font-family: GyB
.case-info
	display table-cell
	width calc(100% - 130px)
	vertical-align: top
	&-title
		color #00
		font-size: 20px
		font-family: GyB
		line-height: 30px
		margin-bottom: 30px
	&-text
		line-height: 28px
	&-exerpt
		color #772377
		font-size: 20px
		font-family: GyB
		display inline-block
		transition: all .2s ease
		&:hover
			color #aaa