#presentation
	padding 30px 0
	background-image url(../img/backs/presentation.png)
	background-repeat no-repeat
	background-position: center
	background-size: cover
	position relative
	&:before
		content: ''
		display block
		position absolute
		width 100%
		height 80px
		background-image url(../img/backs/presentation-up.png)
		background-repeat no-repeat
		background-position: center bottom
		background-size: cover
		left 0
		right 0
		top -80px
	&:after
		content: ''
		display block
		position absolute
		width 100%
		height 82px
		background-image url(../img/backs/presentation-low.png)
		background-repeat no-repeat
		background-position: center top
		background-size: cover
		left 0
		right 0
		bottom -82px
.video-wrapper-presentation
	@extends .video-wrapper-info
.presentatione-text
	@extends .info-text-video
	padding-bottom: 60px
	max-width 500px
.presentation-title
	font-size: 35px
	font-family: MBk
	position relative
	text-transform: uppercase
	span
		display block
		margin 40px 0
		position relative
		&:before
			content: ''
			display block
			position absolute
			width 345px
			height 13px
			background-color: #772377
			left 0
			top -40px