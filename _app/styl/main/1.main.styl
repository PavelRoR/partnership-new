#main
	padding 120px 0 20px
	background-image: url(../img/backs/main.png)
	background-repeat no-repeat
	background-position: top center
	background-size: cover
	position relative
	overflow hidden
	&:before
		content: ''
		display block
		width 817px
		height 365px
		background-image url(../img/images/people.png)
		background-repeat no-repeat
		background-position: center
		background-size contain
		position absolute
		z-index 20
		bottom: -200px
		left 200px
		left 0
		right 0
		margin 0 auto
.main-title
	font-size: 50px
	font-family: MBk
	line-height: 1.3
	span
		background-color: #8B1E7A
		display inline-block
.main-subtitle
	font-size: 32px
	font-family: MBk
	margin 40px 0 60px
.main-form-wrapper
	position relative
	width 100%
	max-width 370px
	margin 0 auto
	img
		position absolute
		top -50px
		right -100px
		z-index 0
.form
	padding 45px
	width 100%
	max-width 370px
	margin 0 auto
	background-color: #1d1d3e
	background-image: linear-gradient(to top, #1d1d3e,#30306a)
	position relative
	&-title
		text-align center
		font-size: 20px
		margin-bottom: 45px
		span
			font-family: GyB
.input
	width 100%
	display block
	margin-bottom: 5px
	background-color #fff
	padding 10px 20px
	border: none
	color #000
	font-size: 20px
	font-family: M
@-webkit-keyframes autofill
	to
		font-size: 20px
		color: #000
		background-color: #fff
input:-webkit-autofill
	-webkit-animation-name: autofill;
	-webkit-animation-fill-mode: both;
.alert-message {
	clear both
	display: none;
	font-size: 16px;
	padding-top: 10px;
	color: #f00
	text-align: center
	font-family: M
	line-height: 1
}
.checking {
	display: table;
	width 100%
	max-width 510px
	margin: 3px auto 0
	text-align: left
}

.checking .check-label {
	line-height: 18px;
	cursor: pointer;
	position: relative;
	display: table-cell;
	vertical-align: middle;
	padding: 0 0 0 40px;
	text-align: left;
	font-size: 13px
	font-family: M
}

.checking .check-label a
	text-decoration: none
	border-bottom: 1px dashed
	display: inline
	color #fff
	&:focus
		border-bottom: 1px dashed
		color #fff
	&:hover
		border-bottom: none
		text-decoration: none
		color #fff

.checking .check-label:before {
	content: '';
	background-color: #681360
	position: absolute;
	left: 0;
	top: 3px;
	width: 31px;
	height: 31px;
	border none
}

.checking .check-label:after {
	content: '';
	position: absolute;
	left: 10px;
	top: -10px;
	width: 11px;
	height: 18px;
	background-color: transparent;
	opacity: 0;
	border-bottom: 2px solid #fff
	border-right: 2px solid #fff
	-webkit-transform: rotate(41deg);
	-ms-transform: rotate(41deg);
	transform: rotate(41deg);
	-webkit-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;

}

.check {
	position: absolute;
	z-index: -1;
	opacity: 0;
	width: 0;
	height 0;
	border: 0;
	left -99999px;
}

.check:checked + .check-label:before {
	background-color: #681360

}

.check:checked + .check-label:after {
	opacity: 1;
	top: 7px;
	-webkit-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;
}
