#case-single
	padding 120px 0 20px
.case-avatar
	display block
	margin 20px 0 30px
	border-radius: 50%
	width 300px
	height auto
	border: 3px solid #772377
.case-title
	font-size: 35px
	font-family: MBk
	position relative
	margin-bottom: 45px
	&:after
		content: ''
		display block
		position absolute
		width 245px
		height 13px
		background-color: #772377
		margin 0 auto
		left 0
		bottom: -20px

.case-bq
	margin 10px 0 25px
	font-size: 20px
	font-family: GyB
.case-text
	font-size: 20px
	margin-bottom: 20px
.case-img
	width 100%
	max-width 650px
	display block
	margin-bottom: 20px
.case-list
	margin-left: 20px
	margin-bottom: 20px